{
  "imports": {
    "@supabase/functions-js/edge-runtime.d.ts": "jsr:@supabase/functions-js/edge-runtime.d.ts",
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@2",
    "@anthropic-ai/sdk": "npm:@anthropic-ai/sdk@0.39.0",
    "langfuse": "npm:langfuse@3.32.0",
    "std/": "https://deno.land/std@0.168.0/"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env supabase/functions/portal-chat/index.ts",
    "lock": "deno cache --lock=deno.lock --lock-write supabase/functions/*/index.ts"
  }
}
